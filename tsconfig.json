{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist/"
  },
  "exclude": ["node_modules", "tests"],
  "include": ["src//*.ts"]
}
